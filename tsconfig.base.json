{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "foo": [
        "dist/foo/foo",
        "dist/foo"
      ],
      "bar": [
        "dist/bar/bar",
        "dist/bar"
      ],
      "elements": [
        "dist/elements/elements",
        "dist/elements"
      ]
    }
  }
}